{%- comment -%}
  Image Banner Section - Placeholder
  For homepage hero
{%- endcomment -%}

{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign image = section.settings.image
  assign image_mobile = section.settings.image_mobile
  assign height = section.settings.height
-%}

<section class="image-banner image-banner--{{ height }}">
  <div class="image-banner__media">
    {%- if image != blank -%}
      {{ image | image_url: width: 2000 | image_tag:
        class: 'image-banner__image image-banner__image--desktop',
        loading: 'eager',
        widths: '375, 750, 1100, 1500, 2000'
      }}
    {%- else -%}
      <div class="image-banner__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'image-banner__placeholder-svg' }}
      </div>
    {%- endif -%}

    {%- if image_mobile != blank -%}
      {{ image_mobile | image_url: width: 750 | image_tag:
        class: 'image-banner__image image-banner__image--mobile',
        loading: 'eager',
        widths: '375, 750'
      }}
    {%- endif -%}
  </div>

  <div class="image-banner__content">
    <div class="container">
      {%- if heading != blank -%}
        <h1 class="image-banner__heading">{{ heading }}</h1>
      {%- endif -%}
      {%- if subheading != blank -%}
        <p class="image-banner__subheading">{{ subheading }}</p>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .image-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: var(--color-border);
  }

  .image-banner--small {
    min-height: 300px;
  }

  .image-banner--medium {
    min-height: 500px;
  }

  .image-banner--large {
    min-height: 100vh;
  }

  @media (min-width: 750px) {
    .image-banner--small {
      min-height: 400px;
    }

    .image-banner--medium {
      min-height: 600px;
    }
  }

  .image-banner__media {
    position: absolute;
    inset: 0;
  }

  .image-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-banner__image--desktop {
    display: none;
  }

  @media (min-width: 750px) {
    .image-banner__image--desktop {
      display: block;
    }

    .image-banner__image--mobile {
      display: none;
    }
  }

  .image-banner__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-border);
  }

  .image-banner__placeholder-svg {
    width: 50%;
    max-width: 300px;
    opacity: 0.5;
  }

  .image-banner__content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: var(--color-secondary);
    padding: var(--spacing-8) 0;
  }

  .image-banner__heading {
    font-size: var(--font-size-3xl);
    font-weight: 300;
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
    margin: 0;
  }

  @media (min-width: 750px) {
    .image-banner__heading {
      font-size: var(--font-size-4xl);
    }
  }

  .image-banner__subheading {
    font-size: var(--font-size-base);
    margin-top: var(--spacing-4);
    opacity: 0.9;
  }
</style>

{% schema %}
{
  "name": "Image banner",
  "tag": "section",
  "class": "section-image-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Banner height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large (Full screen)"
        }
      ],
      "default": "large"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "MILUTIN"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Minimalistički stil za moderan život"
    }
  ],
  "presets": [
    {
      "name": "Image banner"
    }
  ]
}
{% endschema %}
