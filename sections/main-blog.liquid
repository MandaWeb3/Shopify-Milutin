<section class="blog-section">
  <div class="container">
    <header class="blog-section__header">
      <h1 class="blog-section__title">{{ blog.title }}</h1>
      {%- if section.settings.show_description and blog.articles_count > 0 -%}
        <p class="blog-section__description">
          {{ 'blog.article_count' | t: count: blog.articles_count }}
        </p>
      {%- endif -%}
    </header>

    {%- if blog.articles.size > 0 -%}
      {%- paginate blog.articles by section.settings.articles_per_page -%}
        <div class="blog-grid">
          {%- for article in blog.articles -%}
            <article class="blog-card">
              {%- if article.image -%}
                <a href="{{ article.url }}" class="blog-card__media">
                  {{ article.image | image_url: width: 800 | image_tag:
                    loading: 'lazy',
                    widths: '400, 600, 800',
                    class: 'blog-card__image'
                  }}
                </a>
              {%- endif -%}

              <div class="blog-card__content">
                {%- if section.settings.show_date -%}
                  <time class="blog-card__date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                    {{ article.published_at | date: "%d.%m.%Y" }}
                  </time>
                {%- endif -%}

                <h2 class="blog-card__title">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h2>

                {%- if section.settings.show_excerpt and article.excerpt_or_content != blank -%}
                  <p class="blog-card__excerpt">
                    {{ article.excerpt_or_content | strip_html | truncate: 150 }}
                  </p>
                {%- endif -%}

                {%- if section.settings.show_author -%}
                  <p class="blog-card__author">{{ article.author }}</p>
                {%- endif -%}

                <a href="{{ article.url }}" class="blog-card__link">
                  {{ 'blog.read_more' | t }}
                </a>
              </div>
            </article>
          {%- endfor -%}
        </div>

        {%- if paginate.pages > 1 -%}
          <nav class="pagination" aria-label="{{ 'collections.pagination' | t }}">
            <ul class="pagination__list">
              {%- if paginate.previous -%}
                <li>
                  <a href="{{ paginate.previous.url }}" class="pagination__link pagination__link--prev">
                    {{ 'collections.previous' | t }}
                  </a>
                </li>
              {%- endif -%}

              {%- for part in paginate.parts -%}
                <li>
                  {%- if part.is_link -%}
                    <a href="{{ part.url }}" class="pagination__link">{{ part.title }}</a>
                  {%- else -%}
                    {%- if part.title == paginate.current_page -%}
                      <span class="pagination__link pagination__link--current" aria-current="page">{{ part.title }}</span>
                    {%- else -%}
                      <span class="pagination__link pagination__link--gap">{{ part.title }}</span>
                    {%- endif -%}
                  {%- endif -%}
                </li>
              {%- endfor -%}

              {%- if paginate.next -%}
                <li>
                  <a href="{{ paginate.next.url }}" class="pagination__link pagination__link--next">
                    {{ 'collections.next' | t }}
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </nav>
        {%- endif -%}
      {%- endpaginate -%}
    {%- else -%}
      <p class="blog-section__empty">{{ 'blog.no_articles' | t }}</p>
    {%- endif -%}
  </div>
</section>

<style>
  .blog-section {
    padding: var(--spacing-8) 0 var(--spacing-16);
  }

  @media (min-width: 750px) {
    .blog-section {
      padding: var(--spacing-12) 0 var(--spacing-20);
    }
  }

  .blog-section__header {
    text-align: center;
    margin-bottom: var(--spacing-10);
  }

  .blog-section__title {
    font-size: var(--font-size-xl);
    font-weight: 300;
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
    margin: 0 0 var(--spacing-2);
  }

  @media (min-width: 750px) {
    .blog-section__title {
      font-size: var(--font-size-2xl);
    }
  }

  .blog-section__description {
    font-size: var(--font-size-sm);
    color: var(--color-accent);
    margin: 0;
  }

  .blog-section__empty {
    text-align: center;
    font-size: var(--font-size-base);
    color: var(--color-accent);
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    gap: var(--spacing-8);
  }

  @media (min-width: 750px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-10);
    }
  }

  @media (min-width: 990px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Blog Card */
  .blog-card__media {
    display: block;
    overflow: hidden;
    margin-bottom: var(--spacing-4);
  }

  .blog-card__image {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 10;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .blog-card__media:hover .blog-card__image {
    transform: scale(1.03);
  }

  .blog-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .blog-card__date {
    font-size: var(--font-size-xs);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .blog-card__title {
    font-size: var(--font-size-lg);
    font-weight: 500;
    margin: 0;
  }

  .blog-card__title a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .blog-card__title a:hover {
    text-decoration: underline;
  }

  .blog-card__excerpt {
    font-size: var(--font-size-sm);
    color: var(--color-accent);
    line-height: 1.6;
    margin: 0;
  }

  .blog-card__author {
    font-size: var(--font-size-xs);
    color: var(--color-accent);
    margin: 0;
  }

  .blog-card__link {
    font-size: var(--font-size-sm);
    color: var(--color-primary);
    text-decoration: underline;
    margin-top: var(--spacing-2);
  }

  .blog-card__link:hover {
    text-decoration: none;
  }
</style>

{% schema %}
{
  "name": "Blog",
  "tag": "section",
  "class": "section-main-blog",
  "settings": [
    {
      "type": "range",
      "id": "articles_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Articles per page"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show article count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show author",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show excerpt",
      "default": true
    }
  ]
}
{% endschema %}
