{%- comment -%}
  Rich Text Section
  Flexible text content section with customizable layout
{%- endcomment -%}

<section class="rich-text-section rich-text-section--{{ section.settings.width }} rich-text-section--{{ section.settings.text_alignment }}">
  <div class="{% if section.settings.width == 'full' %}container-full{% else %}container{% endif %}">
    <div class="rich-text-section__inner" style="{% if section.settings.background_color != blank %}background-color: {{ section.settings.background_color }};{% endif %}">
      <div class="rich-text-section__content">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <{{ block.settings.heading_tag }} class="rich-text-section__heading rich-text-section__heading--{{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading }}
              </{{ block.settings.heading_tag }}>

            {%- when 'text' -%}
              <div class="rich-text-section__text rte" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>

            {%- when 'button' -%}
              <a
                href="{{ block.settings.button_link }}"
                class="rich-text-section__button btn btn--{{ block.settings.button_style }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.button_label }}
              </a>

            {%- when 'image' -%}
              {%- if block.settings.image != blank -%}
                <div class="rich-text-section__image" {{ block.shopify_attributes }}>
                  {{ block.settings.image | image_url: width: 1200 | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 990px) 800px, 100vw',
                    widths: '400, 600, 800, 1000, 1200'
                  }}
                </div>
              {%- endif -%}

            {%- when 'divider' -%}
              <hr class="rich-text-section__divider" {{ block.shopify_attributes }}>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<style>
  .rich-text-section {
    padding: var(--spacing-10) 0 var(--spacing-16);
  }

  .rich-text-section__inner {
    padding: var(--spacing-8);
  }

  @media (min-width: 750px) {
    .rich-text-section__inner {
      padding: var(--spacing-12);
    }
  }

  .rich-text-section--narrow .rich-text-section__content {
    max-width: 700px;
    margin: 0 auto;
  }

  .rich-text-section--medium .rich-text-section__content {
    max-width: 900px;
    margin: 0 auto;
  }

  .rich-text-section--left {
    text-align: left;
  }

  .rich-text-section--center {
    text-align: center;
  }

  .rich-text-section--right {
    text-align: right;
  }

  .rich-text-section__heading {
    margin: 0 0 var(--spacing-4);
    font-weight: 300;
    letter-spacing: var(--letter-spacing-wider);
  }

  .rich-text-section__heading--small {
    font-size: var(--font-size-lg);
  }

  .rich-text-section__heading--medium {
    font-size: var(--font-size-xl);
  }

  .rich-text-section__heading--large {
    font-size: var(--font-size-2xl);
  }

  @media (min-width: 750px) {
    .rich-text-section__heading--large {
      font-size: var(--font-size-3xl);
    }
  }

  .rich-text-section__text {
    font-size: var(--font-size-base);
    line-height: 1.8;
    color: var(--color-accent);
    margin-bottom: var(--spacing-4);
  }

  .rich-text-section__text:last-child {
    margin-bottom: 0;
  }

  .rich-text-section__text p {
    margin: 0 0 var(--spacing-4);
  }

  .rich-text-section__text p:last-child {
    margin-bottom: 0;
  }

  .rich-text-section__button {
    margin-top: var(--spacing-4);
  }

  .rich-text-section--center .rich-text-section__button {
    display: inline-flex;
  }

  .rich-text-section__image {
    margin: var(--spacing-6) 0;
  }

  .rich-text-section__image img {
    max-width: 100%;
    height: auto;
  }

  .rich-text-section--center .rich-text-section__image img {
    margin: 0 auto;
  }

  .rich-text-section__divider {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--spacing-6) 0;
  }

  .rich-text-section--center .rich-text-section__divider {
    max-width: 100px;
    margin-left: auto;
    margin-right: auto;
  }
</style>

{% schema %}
{
  "name": "Rich text",
  "tag": "section",
  "class": "section-rich-text",
  "settings": [
    {
      "type": "select",
      "id": "width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "full",
          "label": "Full width"
        }
      ],
      "default": "medium",
      "label": "Content width"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Text alignment"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Talk about your brand"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            },
            {
              "value": "p",
              "label": "Paragraph"
            }
          ],
          "default": "h2",
          "label": "Heading tag"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "medium",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ],
          "default": "primary",
          "label": "Button style"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "divider",
      "name": "Divider"
    }
  ],
  "presets": [
    {
      "name": "Rich text",
      "blocks": [
        {
          "type": "heading",
          "settings": {
            "heading": "Talk about your brand"
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>"
          }
        },
        {
          "type": "button",
          "settings": {
            "button_label": "Learn more"
          }
        }
      ]
    }
  ]
}
{% endschema %}
